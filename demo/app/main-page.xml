<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page" xmlns:ui="nativescript-blur">
    <GridLayout rows="" columns="">
        <Image src="https://wallpaperscraft.com/image/rose_flower_colorful_close-up_petals_18824_960x544.jpg" id="bgimage" stretch="aspectFill" />
        <StackLayout id="dimmer" width="100%" height="100%" />
        <StackLayout class="p-20" id="stack">
            <Button text="Blur the Cat" tap="{{blurCat}}" />
            <Button text="Unblur the Cat" tap="{{unBlurCat}}" />

            <Button text="Blur the Background Dark" id="dark" tap="{{blurBg}}" />
            <Button text="Blur the Background Extra Dark" id="extraDark" tap="{{blurBg}}" />
            <Button text="Blur the Background Light" id="light" tap="{{blurBg}}" />
            <Button text="Blur the Background Extra Light" id="extraLight" tap="{{blurBg}}" />
            <Button text="Blur the Background Regular" id="regular" tap="{{blurBg}}" />
            <Button text="Blur the Background Prominent" id="prominent" tap="{{blurBg}}" />
            <Button text="Unblur the Background" tap="{{unBlurBg}}" />


            <Image src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRz2zZ447t45PELg9liuPfDoAcOwdnkuzN5eUSZiTHB8CgL2aduKw" width="200" id="cat" />
        </StackLayout>    
    </GridLayout>
    
</Page>